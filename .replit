modules = ["nodejs-20", "python-3.12", "bash", "web"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 63706
externalPort = 3000

[[ports]]
localPort = 65288
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd frontend && npm run start -- -H 0.0.0.0 -p 5000"]
build = ["bash", "-c", "cd frontend && npm run build"]
